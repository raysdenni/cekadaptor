<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/consola"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/text1"
        android:textSize="32sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="31dp"
        android:layout_marginRight="31dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dotstatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/onlinedot" />

            <TextView
                android:id="@+id/statusadaptor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/consola"
                android:text="@string/status_hardware"
                android:textColor="@color/text1"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="248dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/bgrectsatu"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/consola"
                android:gravity="center"
                android:text="@string/tegangan"
                android:textColor="@color/text1"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/qualitybg"
                android:layout_width="match_parent"
                android:layout_height="172dp"
                android:layout_marginTop="8dp"
                android:background="@color/text3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/voltageh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/segment"
                    android:paddingTop="15dp"
                    android:text="@string/voltasedummy"
                    android:textSize="120sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="20dp"
                    android:fontFamily="@font/consola"
                    android:text="@string/volt_sysmbol"
                    android:textSize="35sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:background="@color/text1"
                android:orientation="vertical">

                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/quality"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_horizontal|center_vertical"
                    android:fontFamily="@font/consola"
                    android:textStyle="bold"
                    android:text="@string/not_connected"
                    android:textColor="#33691E"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:baselineAligned="false"
            android:layout_width="match_parent"
            android:layout_height="107dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_marginRight="7.5dp"
                android:layout_width="wrap_content"
                android:layout_height="107dp"
                android:layout_weight="1"
                android:background="@drawable/bgrectdua"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:fontFamily="@font/consola"
                    android:gravity="center"
                    android:text="@string/arus"
                    android:textColor="@color/text1"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:background="@color/bg4"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/currenth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/segment"
                        android:paddingTop="5dp"
                        android:text="@string/currentdummy"
                        android:textSize="40sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginRight="20dp"
                        android:fontFamily="@font/consola"
                        android:text="@string/current_sysmbol"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginStart="7.5dp"
                android:layout_width="wrap_content"
                android:layout_height="107dp"
                android:layout_weight="1"
                android:background="@drawable/bgrecttiga"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:fontFamily="@font/consola"
                    android:gravity="center"
                    android:text="@string/daya"
                    android:textColor="@color/text1"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:background="@color/bg4"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/powerh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/segment"
                        android:paddingTop="5dp"
                        android:text="@string/powerdummy"
                        android:textSize="40sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginRight="20dp"
                        android:fontFamily="@font/consola"
                        android:text="@string/power_sysmbol"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.061">

            <LinearLayout
                android:layout_marginLeft="31dp"
                android:layout_marginRight="31dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/bgrectempat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/consola"
                        android:gravity="center"
                        android:text="@string/spek_adaptor"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:background="@color/bg2"
                        android:weightSum="3">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/consola"
                            android:gravity="center"
                            android:text="@string/tegangan1"
                            android:textColor="@color/default_color"
                            android:textSize="19sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/consola"
                            android:gravity="center"
                            android:text="@string/arus1"
                            android:textColor="@color/default_color"
                            android:textSize="19sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/consola"
                            android:gravity="center"
                            android:text="@string/daya1"
                            android:textColor="@color/default_color"
                            android:textSize="19sp"
                            android:textStyle="bold" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/default_color"
                        android:weightSum="3">

                        <TextView
                            android:id="@+id/tavoltase"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/consola"
                            android:gravity="center"
                            android:text="@string/tegangandummy"
                            android:textColor="@color/bg2"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tacurrent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/consola"
                            android:gravity="center"
                            android:text="@string/arusdummy"
                            android:textColor="@color/bg2"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tapower"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/consola"
                            android:gravity="center"
                            android:text="@string/dayadummy"
                            android:textColor="@color/bg2"
                            android:textSize="18sp" />
                    </TableRow>

                    <TableRow
                        android:layout_marginTop="10dp"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/default_color"
                        android:weightSum="2">

                        <TextView
                            android:background="@color/bg2"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/consola"
                            android:gravity="center"
                            android:text="@string/tegangan_minimal"
                            android:textColor="@color/default_color"
                            android:textSize="19sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tminvoltage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/consola"
                            android:gravity="center"
                            android:text="@string/tegangandummy"
                            android:textColor="@color/bg2"
                            android:textSize="18sp" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/default_color"
                        android:weightSum="2">

                        <TextView
                            android:background="@color/bg2"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/consola"
                            android:gravity="center"
                            android:text="@string/tegangan_maksimal"
                            android:textColor="@color/default_color"
                            android:textSize="19sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tmaxvoltage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/consola"
                            android:gravity="center"
                            android:text="@string/tegangandummy"
                            android:textColor="@color/bg2"
                            android:textSize="18sp" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Button
                            android:id="@+id/btnedit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/text3"
                            android:text="@string/ubah" />
                    </TableRow>
                </TableLayout>

                <TableLayout
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="@string/keterangan"
                        android:fontFamily="@font/consola"
                        android:textSize="20sp"
                        android:gravity="start"/>
                    <TableRow
                        android:weightSum="3"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent">

                        <TextView
                            android:background="@color/uv_color"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_weight="2"
                            android:paddingLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/uv"
                            android:textColor="@color/bg2"
                            android:fontFamily="@font/consola"
                            android:textSize="16sp"
                            android:gravity="start"/>
                    </TableRow>
                    <TableRow
                        android:weightSum="3"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent">

                        <TextView
                            android:background="@color/normal_color"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_weight="2"
                            android:paddingLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/normal"
                            android:textColor="@color/bg2"
                            android:fontFamily="@font/consola"
                            android:textSize="16sp"
                            android:gravity="start"/>
                    </TableRow>
                    <TableRow
                        android:weightSum="3"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent">

                        <TextView
                            android:background="@color/ov_color"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_weight="2"
                            android:paddingLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ov"
                            android:textColor="@color/bg2"
                            android:fontFamily="@font/consola"
                            android:textSize="16sp"
                            android:gravity="start"/>
                    </TableRow>
                </TableLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>